{
	"applications": {
		"blacksheep": {
			"type": "python 3",
			"processes": 4,
			"protocol": "asgi",
			"path": "/www/",
			"user": "root",
			"group": "root",
			"working_directory": "/www/",
			"module": "main",
			"callable": "app"
		}
	},

	"listeners": {
		"*:80": {
			"pass": "applications/blacksheep",
			"forwarded": {
				"client_ip": "X-Forwarded-For",
				"source": [
					"10.100.100.10"
				]
			}
		}
	},

	"access_log": {
        "path": "/var/log/access.log",
        "format": "$remote_addr - - [$time_local] \"$request_line\" $status $body_bytes_sent \"$header_referer\" \"$header_user_agent\""
    }
}
